{
    "name": "watheqalshowaiter/filament-sticky-table-header",
    "description": "A Filament plugin that makes table headers stick when scrolling down for better UX.",
    "keywords": [
        "WatheqAlshowaiter",
        "Watheq Alshowaiter",
        "filament",
        "filament-plugin",
        "laravel",
        "sticky-header",
        "table",
        "ui",
        "scroll",
        "admin-panel"
    ],
    "homepage": "https://github.com/watheqalshowaiter/filament-sticky-table-header",
    "support": {
        "issues": "https://github.com/watheqalshowaiter/filament-sticky-table-header/issues",
        "source": "https://github.com/watheqalshowaiter/filament-sticky-table-header"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Watheq Alshowaiter",
            "email": "watheq.alshowaiter@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.1",
        "filament/filament": "^3.0|^4.0|^5.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^8.0||^7.0",
        "orchestra/testbench": "^8.0|^9.0"
    },
    "autoload": {
        "psr-4": {
            "WatheqAlshowaiter\\FilamentStickyTableHeader\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WatheqAlshowaiter\\FilamentStickyTableHeader\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "test": "vendor/bin/phpunit",
        "test:ci": "vendor/bin/phpunit --stop-on-failure --no-coverage",
        "lint": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
